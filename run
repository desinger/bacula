create_mysql_database --host=mysql --user=root --password=1
make_mysql_tables --host=mysql --user=root --password=1
grant_mysql_privileges --host=mysql --user=root --password=1

##
mkdir /home/mysql
chmod -R 777 /home/mysql/

docker run -it --name mysql -v /home/mysql:/var/lib/mysql --net=bru -p 3306:3306 -d mysql bash
docker exec -it mysql bash
mysqld --initialize-insecure 
service mysql start
mysql -u root --skip-password


ALTER USER 'root'@'localhost' IDENTIFIED BY '1';
GRANT ALL ON *.* to root@'%' IDENTIFIED BY '1';


